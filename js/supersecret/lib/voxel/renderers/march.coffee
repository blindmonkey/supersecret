lib.export('MarchingCubes', class MarchingCubes
  @render: (neighbors) ->
    if not table?
      initializeTable()

    n = arrayToNumber(neighbors)
    if n of table
      [polygons, transform] = table[n]

    if polygons?
      a = []
      for face in polygons
        transformedFace = MarchingCubes.getTransformedFace(transform, face)
        a.push(transformedFace)
      return a

    return null

    return @faceManager.geometry

  @getTransformedFace: (transform, face) ->
    newFace = []
    for [x, y, z] in face
      [nx, ny, nz] = transform(x, y, z)
      newFace.push [nx, ny, nz]
    return newFace
)
